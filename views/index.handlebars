<div class="container">
    <div class="row" id="burger-title">
        <div class="col-12">
            <h1>Eat-Da-Burger!</h1>
        </div>    
    </div>
</div>

<div class="container">
    <div class="row" id="available burgers">
        <div class="col-6">
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devoured=false}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devoured=true}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>    
    </div>
</div>

<div class="container">
    <div class="row" id="burger-title">
        <div class="col-12">
            <h2>Add a Burger!</h2>
            <form class="create-form">
            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="name" name="burger_name">
            </div>
                <button type="submit" class="addBurgerBtn">Add Burger!</button>
            </form>
        </div>
    </div>
</div>